{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": [
            "**/esbuild.js",
            "**/tsconfig.*",
            "**/vite.config.*",
            "**/next.config.*",
            "**/tailwind.config.*",
            "**/postcss.config.*",
            "**/plopfile.*",
            "**/jest.config.*",
            "**/package-lock.json",
            "**/yarn.lock",
            "**/pnpm-lock.yaml",
            "**/.DS_Store",
            "**/node_modules/**/*",
            "**/public/**/*",
            "**/dist/**/*",
            "**/dist-ssr/**/*",
            "**/build/**/*",
            "**/storybook-static/**/*",
            "**/coverage/**/*",
            "**/bin/**/*",
            "**/obj/**/*",
            "**/out/**/*",
            "**/.yarn/**/*",
            "**/.pnpm-store/**/*",
            "**/.next/**/*",
            "**/.vercel/**/*",
            "**/.swc/**/*",
            "**/.turbo/**/*",
            "**/.devbox/**/*",
            "**/*.mdx"
        ]
    },
    "formatter": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": { "recommended": true },
            "complexity": { "recommended": true, "noBannedTypes": "off", "useArrowFunction": "error" },
            "correctness": {
                "recommended": true,
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useHookAtTopLevel": "error",
                "noEmptyPattern": "off"
            },
            "performance": { "recommended": true },
            "security": { "recommended": true },
            "style": {
                "recommended": true,
                "noDefaultExport": "off",
                "noImplicitBoolean": "error",
                "noNonNullAssertion": "warn"
            },
            "suspicious": {
                "recommended": true,
                "noConsoleLog": "off",
                "noDebugger": "error",
                "useAwait": "error"
            },
            "nursery": { "useSortedClasses": "off" }
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    },
    "overrides": [
        {
            "include": ["features/", "components/", "lib/"],
            "linter": {
                "rules": {
                    "style": { "noDefaultExport": "error" }
                }
            }
        },
        {
            "include": ["*.stories.*", "*.story.*"],
            "linter": {
                "rules": {
                    "style": { "noDefaultExport": "off" },
                    "correctness": { "useHookAtTopLevel": "off" }
                }
            }
        }
    ]
}
